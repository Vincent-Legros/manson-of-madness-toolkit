<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.amphiprion.mansionofmadness"
    android:versionCode="3"
    android:versionName="1.1.1" 
    android:installLocation="preferExternal"
    >

    <application
   		
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".MansionOfMadnessToolKitApplication" >
        <activity
            android:label="@string/app_name"
            android:name=".HomeTabActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:screenOrientation="landscape"
            android:label="@string/app_name"
            android:name=".MapActivity" >
        </activity>
        <activity 
            android:label="@string/app_name"
            android:name=".activity.scenario.ScenarioListActivity" >
        </activity>
        <activity 
            android:label="@string/app_name"
            android:name=".activity.sound.SoundListActivity" >
        </activity>
        <activity 
            android:label="@string/app_name"
            android:name=".activity.card.CardListActivity" >
        </activity>
        <activity 
            android:label="@string/app_name"
            android:name=".activity.tile.TileListActivity" >
        </activity>
        <activity 
            android:label="@string/app_name"
            android:name=".activity.help.HelpListActivity" >
        </activity>
        </application>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false" />

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="11" />
 	
 	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
</manifest>